{
  "trailingComma": "all",
  "useTabs": true,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": [
        ".*",
        "*.json",
        "*.md",
        "*.mdx",
        "*.toml",
        "*.yml"
      ],
      "options": {
        "useTabs": false
      }
    },
    {
      "files": [
        "**/*.astro"
      ],
      "options": {
        "parser": "astro"
      }
    }
  ]
}