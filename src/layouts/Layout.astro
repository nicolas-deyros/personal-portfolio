---
import Head from './Head.astro'
import Header from '../components/Header/Header.astro'
import Footer from '../components/Footer.astro'

const {
	title = 'My Astro Blog',
	description = 'My musings about the Astro framework',
	image,
	data,
	robots,
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<Head {title} {description} {image} {data} {robots} />
	<body class="font-sans bg-white flex flex-col h-screen">
		<Header />
		<main class="mt-20 flex-grow container mx-auto">
			<slot />
		</main>
		<Footer />
	</body>
</html>
